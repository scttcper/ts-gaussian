{
  "name": "ts-gaussian",
  "version": "4.0.0",
  "description": "A TypeScript model of a Gaussian distribution",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/ts-gaussian",
  "homepage": "https://ts-gaussian.vercel.app",
  "keywords": [
    "typescript",
    "gaussian",
    "normal",
    "distribution"
  ],
  "type": "module",
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "scripts": {
    "lint": "oxlint . && prettier --check . --experimental-cli",
    "lint:fix": "oxlint . --fix && prettier --write . --log-level=error --experimental-cli",
    "prepare": "npm run build",
    "build": "tsc",
    "build:docs": "typedoc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage --reporter=default --reporter=junit --outputFile=./junit.xml"
  },
  "devDependencies": {
    "@ctrl/oxlint-config": "1.2.6",
    "@sindresorhus/tsconfig": "8.0.1",
    "@types/node": "24.6.2",
    "@vitest/coverage-v8": "3.2.4",
    "oxlint": "1.19.0",
    "prettier": "3.6.2",
    "typedoc": "0.28.13",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "semi": true,
    "printWidth": 100
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "release": {
    "branches": [
      "master"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
